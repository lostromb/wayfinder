<Window x:Class="WayfinderUI.ModalDialogPromptFilePath"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WayfinderUI"
        mc:Ignorable="d"
        Title="Enter a file or directory path" Height="100" Width="620">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="55*"/>
            <ColumnDefinition Width="558*"/>
        </Grid.ColumnDefinitions>
        <Label Content="Path" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="62" Grid.ColumnSpan="2"/>
        <TextBox Name="PathTextBox" Height="26" Margin="22.228,10,9.8,0" TextWrapping="Wrap"  Text="" VerticalAlignment="Top" Grid.Column="1" />
        <Button Content="Cancel" HorizontalAlignment="Left" Margin="152.228,40,0,0" VerticalAlignment="Top" Width="75" IsCancel="True" Grid.Column="1"/>
        <Button Content="Enter" HorizontalAlignment="Left" Margin="232.228,40,0,0" VerticalAlignment="Top" Width="75" IsDefault="True" Click="Button_Click" Grid.Column="1"/>
    </Grid>
</Window>
